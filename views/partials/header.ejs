<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <title>My Q&A Platform</title>
    <!-- Bootstrap CSS -->
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"
    />
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/js/all.min.js"
      integrity="sha512-b4t4dhwtQvcjv/wyfT+TnTtT1WwZ8fEgjgHlI+mkzP39aEgPAjzY2QH36xgsDitGxxwJdXTj44QzJ1Amrbh/5A=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    ></script>

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.14.7/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
  </head>
  <body>
    <!-- Navigation Bar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
      <a class="navbar-brand" href="#">My Q&A Platform</a>
      <button
        class="navbar-toggler"
        type="button"
        data-toggle="collapse"
        data-target="#navbarNav"
        aria-controls="navbarNav"
        aria-expanded="false"
        aria-label="Toggle navigation"
      >
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item active">
            <a class="nav-link" href="/">Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/questions">Questions</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/askquestion">Ask Question</a>
          </li>
        </ul>
        <ul class="navbar-nav ml-auto">
          <li class="nav-item">
            <a class="nav-link" href="/sign-in">Sign In</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/sign-up">Sign Up</a>
          </li>
        </ul>
      </div>
    </nav>

    <!-- Hero Section -->
    <section class="hero bg-primary text-light py-5">
      <div class="container">
        <h1 class="display-4">Ask Anything and Get Answers from Experts</h1>
        <p class="lead">Welcome to My Q&A Platform</p>
        <form class="d-flex">
          <input
            id="search-input"
            class="form-control me-2"
            type="search"
            placeholder="Search"
            aria-label="Search"
          />
          <button class="btn btn-outline-light">Search</button>
        </form>
        <div id="search-results-container" class="container"></div>
      </div>
      <script>
        const searchInput = document.getElementById("search-input");
        let debounceTimeout;

        searchInput.addEventListener("input", (event) => {
          clearTimeout(debounceTimeout);
          debounceTimeout = setTimeout(() => {
            fetchSearchResults(event.target.value);
          }, 300);
        });

        async function fetchSearchResults(query) {
          if (!query) {
            // Clear search results if the input is empty
            return;
          }

          try {
            const response = await fetch(
              `/api/search?query=${encodeURIComponent(query)}`
            );
            const results = await response.json();
            displaySearchResults(results);
          } catch (error) {
            console.error("Error fetching search results:", error);
          }
        }

        function displaySearchResults(results) {
          const searchResultsContainer = document.getElementById(
            "search-results-container"
          );
          searchResultsContainer.innerHTML = "";

          if (results.length === 0) {
            searchResultsContainer.innerHTML = "<p>No results found.</p>";
            return;
          }

          const row = document.createElement("div");
          row.className = "row";
          searchResultsContainer.appendChild(row);

          results.forEach((question) => {
            console.log(question);
            const col = document.createElement("div");
            col.className = "col-lg-6 col-md-6 col-sm-12";

            const card = document.createElement("div");
            card.className = "card mb-3 question-card";
            card.dataset.questionId = question.id;

            const cardHeader = document.createElement("div");
            cardHeader.className = "card-header bg-primary text-white";
            const cardTitle = document.createElement("h5");
            cardTitle.className = "card-title";
            cardTitle.textContent = question.title;
            cardHeader.appendChild(cardTitle);

            const cardBody = document.createElement("div");
            cardBody.className = "card-body";
            const cardText = document.createElement("p");
            cardText.className = "card-text text-dark";
            cardText.textContent = question.description;
            cardBody.appendChild(cardText);

            card.appendChild(cardHeader);
            card.appendChild(cardBody);
            col.appendChild(card);

            const link = document.createElement("a");
            link.href = `/questions/${question._id}`;
            link.className = "stretched-link";
            col.appendChild(link);

            row.appendChild(col);
          });
        }
      </script>
    </section>
  </body>
</html>
